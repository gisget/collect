<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
		fx:controller="org.openforis.collect.controlpanel.ErrorController"
		stylesheets="@org/openforis/collect/controlpanel/error_dialog.css">
	<center>
		<Label fx:id="mainText" wrapText="true" />
        <TextArea fx:id="errorMessage" wrapText="true" editable="false" />
	</center>
    <bottom>
        <HBox alignment="CENTER">
            <Button text="OK" onAction="#close"/>
        </HBox>
    </bottom>
</BorderPane>